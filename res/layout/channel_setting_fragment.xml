<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12" >

    <TableRow
        android:id="@+id/tableRow0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/txtChannelName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text=""
            android:gravity="center" />

    </TableRow>
    
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/txtReverse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text=""
            android:layout_weight="0.8" />

        <CheckBox
            android:id="@+id/checkBoxReverse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="0.2" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1" >

        <TextView
            android:id="@+id/txtNegDR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text=""
            android:layout_weight="0.2" />

        <SeekBar
            android:id="@+id/seekBarNegDR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1" >

        <TextView
            android:id="@+id/txtPosDR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text=""
            android:layout_weight="0.2" />

        <SeekBar
            android:id="@+id/seekBarPosDR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1" >

        <TextView
            android:id="@+id/txtNegEXP"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text=""
            android:layout_weight="0.2" />

        <SeekBar
            android:id="@+id/seekBarNegEXP"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1" >

        <TextView
            android:id="@+id/txtPosEXP"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text=""
            android:layout_weight="0.2" />

        <SeekBar
            android:id="@+id/seekBarPosEXP"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:weightSum="1" >

	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:orientation="vertical"
	        android:layout_weight="0.2" >
	        
	        <com.laser.ui.widgets.VerticalSeekBar
	        	android:id="@+id/vsbChannel"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:orientation="vertical"
		        android:layout_weight="0.8"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:layout_marginLeft="20dp"
	            android:layout_marginRight="20dp" />
	        
            <TextView
	            android:id="@+id/txtChannelVal"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:gravity="center_horizontal"
	            android:textSize="12sp"
	            android:text=""
	            android:layout_weight="0.2" />
	        
	    </LinearLayout>
        
        
	    <RelativeLayout
	        android:id="@+id/rlGraph"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.8" >

   		 </RelativeLayout>

    </TableRow>

</LinearLayout>