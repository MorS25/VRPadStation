<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/carbon_texture" >
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="8"
	    android:orientation="horizontal"
	    android:weightSum="1" >

        <ImageView
            android:id="@+id/imageName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
	        android:scaleType="fitCenter"
            android:src="@drawable/logo_name" />
        
        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
	        android:scaleType="centerInside"
            android:src="@drawable/logo_laser_bianco_256" />
	    
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/layoutButtons"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="2"
	    android:orientation="horizontal"
	    android:weightSum="7" >
	    	    
	    <ImageButton
	        style="@style/imageButton_mainmenu"
		    android:id="@+id/btnConnect"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
	        android:layout_margin="2dp"
	        android:scaleType="centerInside"
	        android:src="@null" />
		
		<ImageButton
	       style="@style/imageButton_mainmenu"
		    android:id="@+id/btnGcs"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
	        android:layout_margin="2dp"
	        android:scaleType="centerInside"
	        android:src="@drawable/gcs"
		    android:enabled="false" />
				
		<ImageButton
	       style="@style/imageButton_mainmenu"
		    android:id="@+id/btnRadio"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
	        android:layout_margin="2dp"
	        android:scaleType="centerInside"
	        android:src="@drawable/joystick"
		    android:enabled="false" />		
		    
		<ImageButton
	        style="@style/imageButton_mainmenu"
		    android:id="@+id/btnGimbal"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
	        android:layout_margin="2dp"
	        android:scaleType="centerInside"
	        android:src="@drawable/gimbal"
		    android:enabled="false" />
		
		<ImageButton
	       style="@style/imageButton_mainmenu"
		    android:id="@+id/btnSettings"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
	        android:layout_margin="2dp"
	        android:scaleType="centerInside"
	        android:src="@drawable/settings" />
				
		<ImageButton
	        style="@style/imageButton_mainmenu"
		    android:id="@+id/btnAbout"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
	        android:layout_margin="2dp"
	        android:scaleType="centerInside"
	        android:src="@drawable/about" />
		
		<ImageButton
	        style="@style/imageButton_mainmenu"
		    android:id="@+id/btnExit"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
	        android:layout_margin="2dp"
	        android:scaleType="centerInside"
	        android:src="@drawable/exit" />
        
    </LinearLayout>

</LinearLayout>
